@using TaskManagement.Web.Models.DTOs
@model TaskDto

@{
    ViewData["Title"] = "Edit Task";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Edit Task</h4>
        </div>

        <div class="card-body">
            <form asp-action="EditTask" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="TaskTitle" class="form-label"></label>
                    <input asp-for="TaskTitle" class="form-control" />
                    <span asp-validation-for="TaskTitle" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label"></label>
                    <select asp-for="Status" class="form-select">
                        <option value="Pending" selected="@("Pending" == Model.Status)">Pending</option>
                        <option value="Completed" selected="@("Completed" == Model.Status)">Completed</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Priority" class="form-label"></label>
                    <select asp-for="Priority" class="form-select">
                        <option value="Low" selected="@("Low" == Model.Priority)">Low</option>
                        <option value="Medium" selected="@("Medium" == Model.Priority)">Medium</option>
                        <option value="High" selected="@("High" == Model.Priority)">High</option>
                    </select>
                    <span asp-validation-for="Priority" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DueDate" class="form-label"></label>
                    <input asp-for="DueDate" type="date" class="form-control" />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UploadFile" class="form-label">Replace File (Optional)</label>
                    <input asp-for="UploadFile" type="file" class="form-control" />
                </div>

                <button type="submit" class="btn btn-warning w-100">Update Task</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
